{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <script type="text/ng-template" id="app.html">
        <table class="items table table-bordered table-responsive" data-ng-if="items">
            <tr>
                <th class="item__header" data-ng-class="{selected: orderBy === 'id', reverse: reverse && orderBy === 'id'}" data-ng-click="sortBy('id')">
                    <span>ID</span>
                    <i class="glyphicon glyphicon-chevron-up"></i>
                    <i class="glyphicon glyphicon-chevron-down"></i>
                </th>

                <th class="item__header" data-ng-class="{selected: orderBy === 'name', reverse: reverse && orderBy === 'name'}" data-ng-click="sortBy('name')">
                    <span>Name</span>
                    <i class="glyphicon glyphicon-chevron-up"></i>
                    <i class="glyphicon glyphicon-chevron-down"></i>
                </th>

                <th class="item__header" data-ng-class="{selected: orderBy === 'priority', reverse: reverse && orderBy === 'priority'}" data-ng-click="sortBy('priority')">
                    <span>Priority</span>
                    <i class="glyphicon glyphicon-chevron-up"></i>
                    <i class="glyphicon glyphicon-chevron-down"></i>
                </th>
            </tr>

            <tr data-ng-repeat="item in items | orderBy:orderBy:reverse">
                <td class="col-sm-1">[[ item.id ]]</td>
                <td class="col-sm-9">[[ item.name ]]</td>
                <td class="col-sm-2">[[ item.priority ]]</td>
            </tr>
        </table>
    </script>
{% endblock %}
